{
  "version": "1.0",
  "rules": [
    {
      "pattern": "{company}-{product}-{date}-{sequence}",
      "description": "Company product release pattern",
      "example": "openai-gpt5-20250827-001",
      "fields": [
        {"name": "company", "type": "string", "required": true},
        {"name": "product", "type": "string", "required": true},
        {"name": "date", "type": "date", "required": true, "format": "YYYYMMDD"},
        {"name": "sequence", "type": "number", "required": true, "digits": 3}
      ]
    },
    {
      "pattern": "{domain}-{topic}-{date}-{sequence}",
      "description": "Domain topic pattern",
      "example": "ai-ethics-20250827-001",
      "fields": [
        {"name": "domain", "type": "string", "required": true},
        {"name": "topic", "type": "string", "required": true},
        {"name": "date", "type": "date", "required": true, "format": "YYYYMMDD"},
        {"name": "sequence", "type": "number", "required": true, "digits": 3}
      ]
    }
  ],
  "companyMappings": {
    "openai": "OpenAI",
    "google": "Google",
    "microsoft": "Microsoft",
    "meta": "Meta",
    "nvidia": "NVIDIA",
    "tesla": "Tesla",
    "baidu": "Baidu",
    "alibaba": "Alibaba",
    "tencent": "Tencent",
    "huawei": "Huawei"
  },
  "domainMappings": {
    "ai": "Artificial Intelligence",
    "ml": "Machine Learning",
    "dl": "Deep Learning",
    "nlp": "Natural Language Processing",
    "cv": "Computer Vision",
    "robotics": "Robotics",
    "iot": "Internet of Things",
    "blockchain": "Blockchain",
    "quantum": "Quantum Computing"
  }
}