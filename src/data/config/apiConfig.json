{
  "version": "1.0",
  "basePath": "/api/v1",
  "endpoints": {
    "news": {
      "path": "/news",
      "methods": ["GET"],
      "description": "Get paginated list of news items",
      "queryParameters": [
        {
          "name": "page",
          "type": "number",
          "default": 1,
          "description": "Page number"
        },
        {
          "name": "limit",
          "type": "number",
          "default": 20,
          "description": "Items per page"
        },
        {
          "name": "category",
          "type": "string",
          "description": "Filter by category"
        },
        {
          "name": "source",
          "type": "string",
          "description": "Filter by source"
        },
        {
          "name": "isBreaking",
          "type": "boolean",
          "description": "Filter breaking news"
        },
        {
          "name": "isImportant",
          "type": "boolean",
          "description": "Filter important news"
        },
        {
          "name": "sortBy",
          "type": "string",
          "default": "newestFirst",
          "description": "Sort field",
          "options": ["newestFirst", "oldestFirst", "mostViewed", "mostCommented", "alphabetical"]
        },
        {
          "name": "search",
          "type": "string",
          "description": "Full-text search query"
        }
      ],
      "response": {
        "data": "Array<NewsItem>",
        "pagination": {
          "page": "number",
          "limit": "number",
          "total": "number",
          "pages": "number"
        }
      }
    },
    "newsById": {
      "path": "/news/{id}",
      "methods": ["GET"],
      "description": "Get single news item by ID",
      "pathParameters": [
        {
          "name": "id",
          "type": "number",
          "required": true,
          "description": "News item ID"
        }
      ],
      "response": "NewsItem"
    },
    "newsBySemanticId": {
      "path": "/news/semantic/{semanticId}",
      "methods": ["GET"],
      "description": "Get news item by semantic ID",
      "pathParameters": [
        {
          "name": "semanticId",
          "type": "string",
          "required": true,
          "description": "Semantic ID"
        }
      ],
      "response": "NewsItem"
    },
    "categories": {
      "path": "/categories",
      "methods": ["GET"],
      "description": "Get list of available categories",
      "response": "Array<Category>"
    },
    "sources": {
      "path": "/sources",
      "methods": ["GET"],
      "description": "Get list of news sources",
      "response": "Array<string>"
    },
    "search": {
      "path": "/search",
      "methods": ["GET"],
      "description": "Search news items",
      "queryParameters": [
        {
          "name": "q",
          "type": "string",
          "required": true,
          "description": "Search query"
        },
        {
          "name": "limit",
          "type": "number",
          "default": 20,
          "description": "Maximum results"
        },
        {
          "name": "highlight",
          "type": "boolean",
          "default": true,
          "description": "Enable result highlighting"
        }
      ],
      "response": {
        "results": "Array<NewsItem>",
        "total": "number",
        "query": "string",
        "highlighting": "object"
      }
    },
    "stats": {
      "path": "/stats",
      "methods": ["GET"],
      "description": "Get news statistics",
      "queryParameters": [
        {
          "name": "metric",
          "type": "string",
          "description": "Specific metric to retrieve",
          "options": ["totalNewsCount", "breakingNewsCount", "importantNewsCount", "averageViews", "averageComments", "totalViews", "totalComments"]
        },
        {
          "name": "groupBy",
          "type": "string",
          "description": "Group statistics by field",
          "options": ["category", "source", "date"]
        },
        {
          "name": "timeRange",
          "type": "string",
          "description": "Time range for statistics",
          "options": ["day", "week", "month", "year"]
        }
      ],
      "response": "object"
    },
    "timeline": {
      "path": "/timeline",
      "methods": ["GET"],
      "description": "Get news timeline",
      "queryParameters": [
        {
          "name": "source",
          "type": "string",
          "description": "Filter by source company"
        },
        {
          "name": "limit",
          "type": "number",
          "default": 50,
          "description": "Maximum timeline items"
        },
        {
          "name": "importantOnly",
          "type": "boolean",
          "default": false,
          "description": "Show only important events"
        }
      ],
      "response": "Array<TimelineEvent>"
    }
  },
  "rateLimiting": {
    "enabled": true,
    "default": {
      "windowMs": 60000,
      "max": 100
    },
    "endpoints": {
      "/api/v1/search": {
        "windowMs": 60000,
        "max": 30
      },
      "/api/v1/stats": {
        "windowMs": 60000,
        "max": 10
      }
    }
  },
  "cache": {
    "enabled": true,
    "defaultTtl": 300000,
    "endpoints": {
      "/api/v1/categories": {
        "ttl": 3600000
      },
      "/api/v1/sources": {
        "ttl": 3600000
      },
      "/api/v1/stats": {
        "ttl": 300000
      }
    }
  },
  "versioning": {
    "strategy": "url",
    "current": "v1",
    "supported": ["v1"]
  },
  "documentation": {
    "enabled": true,
    "path": "/api-docs",
    "ui": "swagger"
  }
}